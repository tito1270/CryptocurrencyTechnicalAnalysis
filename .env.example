# Security Configuration
# Google reCAPTCHA v3 Site Key (get from https://www.google.com/recaptcha/admin)
VITE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here

# reCAPTCHA Secret Key (server-side only, never expose in client)
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# API Keys for cryptocurrency data
VITE_COINMARKETCAP_API_KEY=your_coinmarketcap_api_key
VITE_COINGECKO_API_KEY=your_coingecko_api_key

# Security Settings
VITE_ENABLE_RATE_LIMITING=true
VITE_MAX_FORM_SUBMISSIONS_PER_HOUR=3
VITE_ENABLE_ANTI_SPAM=true

# Environment
NODE_ENV=production
VITE_APP_URL=https://cryptoanalyzer-pro.com

# SMTP Configuration for contact forms (server-side)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@cryptoanalyzer-pro.com

# Database (if using backend)
DATABASE_URL=your_database_connection_string

# API Rate Limiting (server-side)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Keys
JWT_SECRET=your_very_long_random_jwt_secret_key
ENCRYPTION_KEY=your_32_character_encryption_key
